# runs teamcity agent service installed in teamcity user
# as a teamcity user

description "Teamcity Agent"

start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 10 5

setuid <%= @username %>

chdir /home/teamcity/BuildAgent/bin/
exec ./agent.sh run > /tmp/teamcity.log
